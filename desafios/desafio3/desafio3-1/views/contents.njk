{% extends 'layout.njk' %}
{% block head %}
<title>Contents - desafio 3.1</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock head %}

{% block content %}

<header>

    <div class="wrapper">
        <h1 class="title-content">Conte√∫dos</h1>

        <section class="cards">
            <div class="card" id="starter">

                <div class="card-image">
                    <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Starter">
                </div>
                <div class="card-info">
                    <p class="card-price free">FREE</p>
                    <p>05 MODULOS</p>
                </div>
            </div>
            <div class="card" id="launchbase">

                <div class="card-image">
                    <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="Lauchbase">
                </div>
                <div class="card-info">
                    <p class="card-price">PAGO</p>
                    <p>10 MODULOS</p>
                </div>
            </div>
            <div class="card" id="gostack">

                <div class="card-image">
                    <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="GoStack">
                </div>
                <div class="card-info">
                    <p class="card-price">PAGO</p>
                    <p>20 MODULOS</p>
                </div>

            </div>
        </section>
    </div>


</header>

<div class="modal-overlay hide">
    <div class="modal">
        <div class="close-modal">
            <i class="material-icons">close</i>
        </div>
        <div class="maximize-modal">
            <i class="material-icons">maximize</i>
        </div>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>
<script src="scripts.js"></script>

{% endblock content %}