{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <table>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                    {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image:url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>
                            {% for service in teacher.services %}
                                <span>{{service}}</span>
                            {% endfor %}
                            
                            </td>
                        <td><a href="teachers/{{teacher.id}}">ver</a></td>
                        
                    </>
                    {% endfor %}
                
            </tbody>
        </table>
    </div>
{% endblock content %}