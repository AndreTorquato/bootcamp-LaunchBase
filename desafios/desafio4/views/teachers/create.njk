{% extends "layout.njk" %}

{% block content %}

    <div class="card">
            <section class="avatar" style="background: url(https://source.unsplash.com/collection/10552289/500) no-repeat center center / cover"></section>
        <form method ="POST"  action ="/teachers" class="details">
            <h3>Cadastro de Professores</h3>
            <div class="item">
                <div>Professor:</div>
                <input 
                type="url"
                name="avatar_url"
                placeholder="https://"
                 >
            </div>
            <div class="item">
                <div>Nome:</div>
                <input 
                type="text" 
                name="name" 
                placeholder="Nome do Professor"
                >
            </div>
            <div class="item">
                <div>Data de nascimento:</div>
                <input 
                type="date" 
                name="birth"
                >
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <select name="educationLevel">
                    <option value="Ensino Médio Completo" selected>Ensino Médio Completo</option>
                    <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
            </div>
            <div class="item">
                <div>Tipo de aula:</div>
                <span><input type="radio" name="typeClass" value="presential" checked>PRESENCIAL</span>
                <span><input type="radio" name="typeClass" value="distance">A DISTÂNCIA</span>
                
            </div>
            <div class="item">
                <div>Acompanhamento:</div>
                <input 
                type="text"
                name="services"
                placeholder="Materias lecionadas"
                >
            </div>
           <button type="submit">Salvar</button>
    </form>
{% endblock content %}