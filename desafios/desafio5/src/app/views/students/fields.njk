    <div class="item">
        <div>Professor:</div>
        <input 
        type="url"
        name="avatar_url"
        placeholder="https://"
        value="{{student.avatar_url}}"
            >
    </div>
    <div class="item">
        <div>Nome:</div>
        <input 
        type="text" 
        name="name" 
        placeholder="Nome do Professor"
        value="{{student.name}}"
        >
    </div>
    <div class="item">
        <div>E-mail:</div>
        <input 
        type="email" 
        name="email" 
        value="{{student.email}}"
        >
    </div>
    <div class="item">
        <div>Data de nascimento:</div>
        <input 
        type="date" 
        name="birth_date"
        value="{{student.birth_date}}"
        >
    </div>
    <div class="item">
        <div>Ano Escolar</div>
        <select name="school_years">
            <option 
                value="3" 
                {% if student.school_years == "3" %}
                selected
                {% endif %}
            >3ยบ Ano Fundamental
            </option>
            <option 
                value="4"
                {% if student.school_years == "4" %}
                selected
                {% endif %}
            >4ยบ Ano Fundamental
            </option>
            <option 
                value="5"
                {% if student.school_years == "5" %}
                selected
                {% endif %}
            >5ยบ Ano Fundamental
            </option>
            <option 
                value="6"
                {% if student.school_years == "6" %}
                selected
                {% endif %}
            >6ยบ Ano Fundamental
            </option>
        </select>
    </div>
    <div class="item">
        <div>Carga horaria semanal:</div>
        <input 
        type="number" 
        name="hours"
        placeholder="Quantidade em horas"
        value="{{student.hours}}"
        >
    </div>
     <div class="item">
        <div>Professor:</div>
        <select name="teacher_id">
            {% for option in options %}
            <option 
                value="{{option.id}}" 
                {% if option.id == student.teacher_id %}
                selected
                {% endif %}
            >
            {{option.name}}
            </option>
            {% endfor %}
            
        </select>
    </div>
    <button  class="submit_button" type="submit">Salvar</button>