{% extends "layout.njk" %}

{% block content %}

    <div class="card">
            <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Aluno:</div>
                <div>{{student.name}}</div>
            </div>
            <div class="item">
                <div>Aniversario</div>
                <div>{{student.age}}</div>
            </div>
            <div class="item">
                <div>E-mail</div>
                <div>{{student.email}}</div>
            </div>
            <div class="item">
                <div>Ano Escolar:</div>
                <div>
                {% if student.school_years == "3" %}
                3ยบ Ano Fundamental
                {% endif %}
                </div>
            <div>
                {% if student.school_years == "4" %}
                4ยบ Ano Fundamental
                {% endif %}
            </div>
            <div>
            {% if student.school_years == "5" %}
                5ยบ Ano Fundamental
                {% endif %}
            </div>
            <div>
            {% if student.school_years == "6" %}
                6ยบ Ano Fundamental
            {% endif %}
            </div>
            </div>
            <div class="item">
                <div>Horas:</div>
                <div>{{student.hours}} horas</div>
            </div>

            <a href="/students/{{student.id}}/edit" class="button">Editar</a>
    </section>
{% endblock content %}