{% extends "layout.njk" %}

{% block content %}

    <div class="card">
            <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Professor:</div>
                <div>{{teacher.name}}</div>
            </div>
            <div class="item">
                <div>Idade:</div>
                <div>{{teacher.age}}</div>
            </div>
            <div class="item">
                <div>Grau de Escolaridade:</div>
                <div>{{teacher.education_level}}</div>
            </div>
            <div class="item">
                <div>Tipo de aula:</div>
                <div><span>{{ "Presencial" if teacher.class_type == "presencial" else "A DISTÃ‚NCIA"}}</span></div>
            </div>
            <div class="item">
                <div>Acompanhamento:</div>
                <div>
                    {% for teacher in teacher.subjects_taught %}
                    <span>{{teacher}}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde:</div>
                <div><label>{{teacher.created_at}}</label></div>
            </div>

            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
    </section>
{% endblock content %}